{
  "name": "@overlook/plugin-path",
  "version": "0.8.1",
  "description": "Overlook framework path plugin",
  "main": "index.js",
  "module": "es/index.js",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./index.js"
    },
    "./es": "./es/index.js"
  },
  "files": [
    "lib/**/*.js",
    "es/**/*.js"
  ],
  "sideEffects": false,
  "author": {
    "name": "Overlook Motel"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/overlookjs/plugin-path.git"
  },
  "bugs": {
    "url": "https://github.com/overlookjs/plugin-path/issues"
  },
  "dependencies": {
    "@overlook/plugin": "^0.3.0",
    "@overlook/plugin-match": "^0.8.2",
    "@overlook/plugin-order": "^0.1.1",
    "@overlook/plugin-ordered": "^0.5.1",
    "@overlook/plugin-request": "^0.1.2",
    "@overlook/route": "^0.6.3",
    "has-own-prop": "^2.0.0",
    "is-it-type": "^4.0.0"
  },
  "devDependencies": {
    "@overlook/plugin-serve-http": "^0.3.3",
    "@overlook/plugin-start": "^0.1.4",
    "@overlookmotel/eslint-config": "^7.1.2",
    "@overlookmotel/eslint-config-jest": "^4.0.1",
    "@overlookmotel/eslint-config-node": "^2.0.0",
    "axios": "^0.19.2",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^26.0.1",
    "jest-expect-subclass": "^1.0.1",
    "jest-extended": "^0.11.5",
    "once": "^1.4.0",
    "parse-node-version": "^1.0.1"
  },
  "keywords": [
    "overlook",
    "overlook-plugin",
    "path"
  ],
  "scripts": {
    "test": "npm run lint && npm run test-main",
    "lint": "eslint . --ext 'js,mjs'",
    "lint-fix": "eslint . --ext 'js,mjs' --fix",
    "test-main": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test-prod": "cross-env NODE_ENV=production npm run test-main",
    "cover": "npm run cover-main && rm -rf coverage",
    "coveralls": "npm run cover-main && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cover-main": "cross-env COVERAGE=true node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "ci": "if [ $COVERAGE ]; then npm run coveralls; else npm test; fi"
  },
  "engines": {
    "node": ">=10"
  },
  "readmeFilename": "README.md",
  "license": "MIT"
}
